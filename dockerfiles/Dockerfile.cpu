# syntax=docker/dockerfile:1.0.0-experimental
FROM ubuntu:18.04

RUN apt-get update && \
	apt-get install python3 python3-pip git wget -y && \
	mkdir app /var/log/sacred_tensorboard  /var/moonraker_models

ADD ./ /app

RUN --mount=type=secret,id=gitlab_credentials.ini \ 
	cd /app && \
	pip3 install --process-dependency-links -e .[jupyter]

WORKDIR /app
