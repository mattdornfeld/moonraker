# syntax=docker/dockerfile:1.0.0-experimental
FROM python:3.6

ENV PYTHONPATH=/app

RUN mkdir /var/log/sacred_tensorboard /var/moonraker_models

ADD ./ /app

WORKDIR /app

RUN --mount=type=secret,id=gitlab_credentials.ini \
    apt-get update && \
	apt-get install -y git && \
	python3 setup.py install
